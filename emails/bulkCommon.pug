doctype html
head
  style
    include style.css
  meta(http-equiv='Content-Type' content='text/html; charset=UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  // So that mobile will display zoomed in
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  // enable media queries for windows phone 8
  meta(name='format-detection' content='date=no')
  // disable auto date linking in iOS 7-9
  meta(name='format-detection' content='telephone=no')
  // disable auto telephone linking in iOS 7-9
  title User sign-up
// 100% background wrapper (grey background)
table(border='0' width='100%' height='100%' cellpadding='0' cellspacing='0' bgcolor='#F0F0F0')
  tr
    td(align='center' valign='top' bgcolor='#F0F0F0' style='background-color: #F0F0F0;')
      // 600px container (white background)
      table.container(border='0' width='600' cellpadding='0' cellspacing='0' style='font-family: sans-serif;width:600px;max-width:600px')
        tr
          td.container-padding.header(align='center' style='padding:15px; justify-content:center;align-items:center' bgcolor='#3E82B0')
            img(src=appUrl+"/app/assets/logo-white.png" style='width: 60px;height: auto;object-fit: cover;')
            h3(style='margin:0; padding:0; color: #ffffff;margin-bottom: 5px;margin-left: 10px;font-size: 20px; font-weight: 500;') #{appName}
        tr
          td.content(align='left' style='font-family: sans-serif;padding-top:12px;padding-bottom:0px;background-color:#ffffff')
            table.force-row(width='600' border='0' cellpadding='0' cellspacing='0' style='width: 600px;')
              tr
                td.content-wrapper(style='padding-left:24px;padding-right:24px')
                  .title(style='font-family: sans-serif; font-size: 15px; font-weight: 100; color: #000; line-height: 24px; padding-bottom: 24px; letter-spacing: 0.1px;')
                    strong(style='display:flex;color:#333;font-size:18px;margin-bottom: 10px;margin-top: 20px;font-weight: 400;')
                      | Hello
                      nbsp
                        h4(style='margin:0;text-transform:capitalize;font-weight: 400;margin-left: 5px;') %recipient.storeName%,
                    case template
                      when 'bulkUpdate'
                        include ./bulkUpdate.pug
                      when 'bulkDelete'
                        include ./bulkDelete.pug
                      default
                        - throw new Error('"template" must be "bulkUpdate" or "bulkDelete"')
                    span(style="  display: block; margin-top: 10px; text-transform: capitalize; font-size: 12px; color: #000; letter-spacing: 0.5px; font-weight: 400;") view more apps at :
                    a(href='https://apps.shopify.com/partners/webrexstudio' style='display:block;') Shopify Partner Webrex Studio 
              tr
                td.content-wrapper(style='padding-left:24px;padding-right:24px')
                  div(style='color: #757575;font-size: 14px;font-weight: 400; margin-bottom: 30px')
                    br
                    |  Have a Nice Day! 
                    br
                    |  Friends at #{appName}

